<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidtrackerclient"
    android:versionCode="1"
    android:versionName="1.0" >
    
	<!-- SDk Version  -->
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    
    <!-- Permissions  -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

     <!-- Application Definition  -->
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
         <!-- Activities  -->
         
        <activity
            android:name="at.ac.tuwien.tracker.android.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.ac.tuwien.tracker.android.serverConnection.RegisterActivity"
            android:label="@string/title_activity_register" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.ac.tuwien.client.android.MainActivity" />
        </activity>
        
        <!-- GPS Logger  -->
        
        
        <service android:name="at.ac.tuwien.tracker.android.GpsLoggingService">
            <intent-filter>
                <action android:name="at.ac.tuwien.tracker.android.GpsLoggingService"/>
            </intent-filter>
        </service>

        <activity android:name="at.ac.tuwien.tracker.android.GpsMainActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTask" android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="at.ac.tuwien.tracker.android.senders.dropbox.DropBoxAuthorizationActivity"
                  android:label="DropBox"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="at.ac.tuwien.tracker.android.DROPBOX_SETUP"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
                android:name="com.dropbox.client2.android.AuthActivity"
                android:launchMode="singleTask"
                android:configChanges="orientation|keyboard">
            <intent-filter>
                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-0unjsn38gpe3rwv"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:label="@string/osm_preferences_title"
                  android:name="at.ac.tuwien.tracker.android.senders.osm.OSMAuthorizationActivity">
            <intent-filter>
                <action android:name="at.ac.tuwien.tracker.android.OSM_AUTHORIZE"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="gpslogger" android:host="authorize"/>
            </intent-filter>
        </activity>

        <activity android:name="at.ac.tuwien.tracker.android.GpsSettingsActivity"
                  android:label="@string/settings_screen_name"
                  android:screenOrientation="portrait">
        </activity>


        <activity android:name="at.ac.tuwien.tracker.android.senders.email.AutoEmailActivity"
                  android:label="@string/autoemail_title" android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="at.ac.tuwien.tracker.android.AUTOEMAIL_SETUP"/>
            </intent-filter>
        </activity>
        <activity android:name="at.ac.tuwien.tracker.android.senders.gdocs.GDocsSettingsActivity" android:label="@string/gdocs_settings_screenname">
            <intent-filter>
                <action android:name="at.ac.tuwien.tracker.android.GDOCS_SETUP"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".shortcuts.ShortcutCreate" android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".shortcuts.ShortcutStart" android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>
        <activity android:name=".shortcuts.ShortcutStop" android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>
        <activity android:name="at.ac.tuwien.tracker.android.senders.opengts.OpenGTSActivity"
                  android:label="@string/opengts_setup_title">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="at.ac.tuwien.tracker.android.OPENGTS_SETUP"/>
            </intent-filter>
        </activity>

        <receiver android:enabled="true"
                  android:name="at.ac.tuwien.tracker.android.StartupReceiver"
                  android:permission="android.permission.RECEIVE_BOOT_COMPLETED">

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </receiver>

        <receiver android:name="at.ac.tuwien.tracker.android.senders.AlarmReceiver"/>
        
    </application>

</manifest>